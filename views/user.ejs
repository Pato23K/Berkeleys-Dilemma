<%- include("./partials/headerU") -%>
<div class="back-img profile-page">
    <div class="in-div my-5 justify-content-center">
        <h2 class="in-title text-right">Your Profile</h2>
        <div class="profile-container mx-4">
            <div class="row col-12 mx-2">
                <div class="text-right col-md-6 col-12 p-3">
                    <h3 class="welcome-title">Welcome, <%= sessUser.name %>!</h3>
                </div>
                <!-- Account Actions Column -->
                <div class="col-md-6 col-12 my-3">
                    <div class="d-flex justify-content-start mx-3">
                        <button onclick="location.href='/edit-profile'" class="start-btn me-2">Edit Profile</button>
                        <button onclick="location.href='/log-out'" class="start-btn">Log Out</button>
                    </div>
                </div>
            </div>

            <div class="row mx-2">
                <!-- Profile Details Column -->
                <div class="col-md-6 mb-3">
                    <h5 class="profile-section-title">Profile Details</h4>
                    <ul class="list-group profile-details">
                        <li class="list-group-item"><em>Name:</em> <%= sessUser.name %></li>
                        <li class="list-group-item"><em>Username:</em> <%= sessUser.username %></li>
                        <li class="list-group-item"><em>Email:</em> <%= sessUser.email %></li>
                    </ul>
                </div>

                <div class="col-md-6 my-4 text-center"> <!-- Adjusted to center the icon -->
                    <i class="fa-solid fa-user fa-8x"></i> <!-- Added fa-3x for size -->
                </div>
                
                
            </div>

            <div class="text-right mt-4 mx-4">
                <a href='/index' class="back-home-link ">Back to Home</a>
            </div>
        </div>
    </div>
</div>
<%- include("./partials/footerA") -%>
