<%- include("./partials/headerA") -%>
<div class="back-img">
    <div class="in-div">
        <h2 class="in-title">Berkeley's Dilemma</h2>
        <div class="login-container">
            <div class="text-center">
            <h3>Log In</h3>
            <h6 class="log-err-title"><%=dopple ? "That account already exists" : right_log ? null : "Incorrect Username or Password"%></h6>
        </div>
            <form action="/" method="POST">
                <div class="form-group">
                    <label for="username">Username</label>
                    <input type="text" class="form-control" id="username" placeholder="Enter your username" name="username" required>
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" class="form-control" id="password" placeholder="Enter your password" name="password" required>
                </div>

                <button type="submit" class="log-btn col-12">Log In</button>

                <div class="text-center mt-3">
                    <a href="/signin">Sign In</a> or <a href="/index">Continue as Guest</a>
                </div>
            </form>
        </div>
    </div>
</div>
<%- include("./partials/footerA") -%>
