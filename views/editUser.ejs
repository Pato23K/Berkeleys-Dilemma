<%- include("./partials/headerU") -%>
<div class="back-img profile-page">
    <div class="in-div my-5 justify-content-center">
        <h2 class="in-title text-right">Edit Your Profile</h2>
        <div class="profile-container mx-4">
            <div class="row col-12 mx-2">
                <div class="text-right col-md-6 col-12 p-3">
                    <h3 class="welcome-title"><em>Edit Mode</em></h3>
                </div>
                <!-- Account Actions Column -->
                <div class="col-md-6 col-12 my-3">
                    <div class="d-flex justify-content-start mx-3">
                        <button type="submit" form="profileForm" class="start-btn me-2">Save</button>
                        <button onclick="location.href='/log-out'" class="start-btn">Log Out</button>
                    </div>
                </div>
            </div>

            <form id="profileForm" action="/save-profile" method="POST">
                <div class="row mx-2">
                    <!-- Profile Details Column -->
                    <div class="col-md-6 mb-3">
                        <h5 class="profile-section-title">Profile Details</h5>
                        <ul class="list-group profile-details">
                            <li class="list-group-item">
                                <em>Name:</em> 
                                <input type="text" name="name" value="<%= sessUser.name %>" class="form-control" required />
                            </li>
                            <li class="list-group-item">
                                <em>Username:</em> 
                                <input type="text" name="username" value="<%= sessUser.username %>" class="form-control" required />
                            </li>
                            <li class="list-group-item">
                                <em>Email:</em> 
                                <input type="email" name="email" value="<%= sessUser.email %>" class="form-control" required />
                            </li>
                        </ul>
                    </div>

                    <div class="col-md-6 my-4 text-center">
                        <i class="fa-solid fa-user fa-8x"></i>
                    </div>
                </div>
            </form>

            <div class="text-right mt-4 mx-4">
                <a href='/index' class="back-home-link">Back to Home</a>
            </div>
        </div>
    </div>
</div>
<%- include("./partials/footerA") -%>
